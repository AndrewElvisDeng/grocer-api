<%= form_with(model: product, local: true) do |form| %>
	
	<%= form.label :name, 'Product Name:'%>
	<%= form.text_field :name %>
  <br>
    <%= form.label :price, 'Price' %>
    <%= form.number_field :price, :step => 0.01 %>
  <br>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
