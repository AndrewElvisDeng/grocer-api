<%= form_with(model: product, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name, 'Product Name:'%>
    <%= form.text_field :name, class: "form-control", placeholder: 'Please enter product name' %>
  </div>

  <div class="form-group">
    <%= form.label :price, 'Price: ' %>
    <%= form.number_field :price, :step => 0.01, class: "form-control", placeholder: '0.00'%>
  </div>

  <div class="form-group">
    <a class = "btn btn-secondary btn-sm mr-1" href="<%=products_path%>" role="button"> Back </a>
    <button type="submit" class="btn btn-primary btn-sm"> Submit </button>
  </div>
  
<% end %>
