<div class="container">
	<div class="row justify-content-center">
		<h1>Products and Produce</h1>
	</div>

	<div class="row justify-content-center">
		<a class = "btn btn-success btn-sm mr-1" href="<%=new_product_path%>" role="button"> New Product </a>
	</div>

	<div class="row justify-content-center">
		<table>
			<thead>
				<tr>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @products.each do |product| %>
					<tr>
						<td><%= link_to product.name, product_path(product)%></td>
						<td>$<%= product.price %></td>
						<td><%= link_to 'Edit', edit_product_path(product) %></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>