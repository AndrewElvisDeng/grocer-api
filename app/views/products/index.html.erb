<%= link_to 'Products and Produce', products_path %>
<%= link_to 'Store Locations', stores_path %>
<%= link_to 'Inventory', stocks_path %>

<div class="container">
	<h1>Products and Produce</h1>

	<a class = "btn btn-success btn-sm mr-1" href="<%=new_product_path%>" role="button"> New Product </a>

	<table>
		<thead>
			<tr>
				<th colspan="3"></th>
			</tr>
		</thead>

	<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= link_to product.name, product_path(product)%></td>
					<td>$<%= product.price %></td>
					<td><%= link_to 'Edit', edit_product_path(product) %></td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>