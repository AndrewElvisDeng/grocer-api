<h1>Products:</h1>

<table>
	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
	</thead>

<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= link_to product.name, product_path(product)%></td>
				<td><%= link_to 'Edit', edit_product_path(product) %></td>
			</tr>
		<%end%>
	</tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>


