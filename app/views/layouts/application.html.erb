<!DOCTYPE html>
<html>
  <head>
    <title>SuperMart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="index_page">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-pills">
        <a class="navbar-brand" href="/"> SuperMart</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= link_to ' Products and Produce  ', products_path, class: "nav-item nav-link" %> 
            <%= link_to ' Store Locations  ', stores_path, class: "nav-item nav-link" %> 
            <%= link_to ' Inventory ', stocks_path, class: "nav-item nav-link" %> 
          </div>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>