<div class="container">
	
	<div class="row justify-content-center">
		<h1>Inventory:</h1>
	</div>

	<div class="row justify-content-center">
		<a class = "btn btn-success btn-sm mr-1" href="<%=new_stock_path%>" role="button"> Add to Inventory </a>
	</div>

	<div class="row justify-content-center">
		<table>
			<thead>
				<tr>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @stocks.each do |stock| %>
					<tr>
						<td><%= link_to stock.store.street, stock_path(stock)%></td>
						<td><%= stock.product.name %></td>
						<td><%= stock.quantity %></td>
						<td><%= link_to 'Edit', edit_stock_path(stock) %></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>