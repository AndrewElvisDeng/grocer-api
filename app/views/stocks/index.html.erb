<div class="container">
	
	<div class="row justify-content-center">
		<h1>Inventory:</h1>
	</div>

	<div class="row justify-content-center">
		<a class = "btn btn-success btn-sm mr-1" href="<%=new_stock_path%>" role="button"> Add to Inventory </a>
	</div>

	<div class="row justify-content-center">
		<table>
			<thead>
				<tr>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @stocks.each do |stock| %>
					<tr>
						<td style="padding:10px 25px 10px 25px"><%= link_to stock.store.street, stock_path(stock)%></td>
						<td style="text-align: center"><%= stock.product.name %></td>
						<td style="text-align: right"><%= stock.quantity %></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>