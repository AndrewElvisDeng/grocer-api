<%= form_with scope: :stock, url: stocks_path, local: true do |form| %>

<div class="form-group">
    <%= form.label :store_id, 'Location:' %>
    <%= form.collection_select :store_id, Store.order(:street), :id, :street, include_blank: true, prompt: 'Choose a location' %>
</div>

<div class="form-group">
    <%= form.label :product_id, 'Product:' %>
    <%= form.collection_select :product_id, Product.order(:name), :id, :name, include_blank: true, prompt: 'Choose a product' %>
</div>

<div class="form-group">
    <%= form.label :quantity, 'Quantity: ' %>
    <%= form.number_field :quantity, class: "form-control", placeholder: 0%>
</div>

<div class="form-group">
    <div class="actions">
        <%= form.submit %>
    </div>
</div>

<div class="form-group">
    <a class = "btn btn-secondary btn-sm mr-1" href="<%=stocks_path%>" role="button"> Back </a>
    <button type="submit" class="btn btn-primary btn-sm"> Submit </button>
</div>
  
<% end %>

