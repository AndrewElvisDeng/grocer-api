<div class="container">
	<div class="row justify-content-center">
		<h1>Store Locations: </h1>
	</div>

	<div class="row justify-content-center">
		<a class = "btn btn-success btn-sm mr-1" href="<%=new_store_path%>" role="button"> New Store Location </a>
	</div>

	<div class="row justify-content-center">
		<table>
			<thead>
				<tr>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @stores.each do |store| %>
					<tr>
						<td style="padding:10px 25px 10px 25px">
						<%= link_to store_path(store) do %>
							<%= store.address %> <%= store.street %> <%= store.zip %>
						<% end %>
						</td>
						<td style="padding:10px 25px 10px 25px; text-align: right"><%= store.phone %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>